    <div class="mb-3">
        <label for="product_price" class="form-label">Giá Sản Phẩm</label>
            <input type="number" class="form-control" id="product_price" name="ProductPrice" value="">
    </div>
    <div class="mb-3">
        <label for="product_des" class="form-label">Miêu Tả Sản Phẩm</label>
            <input type="text" class="form-control" id="product_des" name="ProductDescription" value="">
    </div>


